<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
	android:weightSum="1">

   <LinearLayout
        android:id="@+id/menu"
        android:layout_width="275dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal">

        <Button
            android:id="@+id/about"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="About"
            android:textSize="15sp" />

   </LinearLayout>

	<LinearLayout
	    android:id="@+id/screen"
        android:layout_width="275dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/menu"
        android:orientation="vertical">
    	<TextView
	        android:id="@+id/screenMath"
	       android:layout_width="match_parent"
        	android:layout_height="50dp"
	        android:layout_alignParentLeft="true"
	        android:gravity="center|right"
	        android:layout_gravity="center_horizontal"
	        android:text=""
	        android:textSize="20sp" >
	   </TextView>
	    <TextView
	        android:id="@+id/screenAns"
	        android:layout_width="match_parent"
        	android:layout_height="50dp"
	        android:layout_alignParentLeft="true"
	        android:gravity="center|right"
	        android:text="0"
	        android:textSize="25sp" >
	    </TextView>
	</LinearLayout>

	<LinearLayout
        android:id="@+id/banphim"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/screen"
        android:orientation="vertical"
        android:layout_marginTop="5dp"
		android:layout_weight="28.10">

        <LinearLayout
            android:id="@+id/line1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/sin"
                android:layout_width="55sp"
                android:layout_height="50sp"
                android:text="Sin"
                android:textSize="15sp"
				android:background="@android:color/holo_blue_light" />

            <Button
                android:id="@+id/cosin"
                android:layout_width="55sp"
                android:layout_height="50sp"
                android:text="Cos"
                android:textSize="15sp"
				android:background="@android:color/holo_blue_light" />

            <Button
                android:id="@+id/tan"
                android:layout_width="55sp"
                android:layout_height="50sp"
                android:text="Tan"
                android:textSize="15sp"
				android:background="@android:color/holo_blue_light" />

			<Button
                android:id="@+id/factorial"
                android:layout_width="55sp"
                android:layout_height="50sp"
                android:text="!"
                android:textSize="15sp"
				android:background="@android:color/holo_blue_light" />

			<Button
                android:id="@+id/pow"
                android:layout_width="55sp"
                android:layout_height="50sp"
                android:text="^"
                android:textSize="15sp"
				android:background="@android:color/holo_blue_light" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/line2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/clear"
                android:layout_width="55sp"
                android:layout_height="50sp"
                android:text="←"
                android:textSize="15sp"
				android:background="@android:color/holo_blue_light" />

            <Button
                android:id="@+id/pi"
                android:layout_width="55sp"
                android:layout_height="50sp"
                android:text="π"
                android:textSize="15sp"
				android:background="@android:color/holo_blue_light" />

            <Button
                android:id="@+id/open"
                android:layout_width="55sp"
                android:layout_height="50sp"
                android:text="("
                android:textSize="15sp"
				android:background="@android:color/holo_blue_light" />

            <Button
                android:id="@+id/close"
                android:layout_width="55sp"
                android:layout_height="50sp"
                android:text=")"
                android:textSize="15sp"
				android:background="@android:color/holo_blue_light" />

            <Button
                android:id="@+id/sqrt"
                android:layout_width="55sp"
                android:layout_height="50sp"
                android:text="√"
                android:textSize="15sp"
				android:background="@android:color/holo_blue_light" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/line3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/num7"
                android:layout_width="55sp"
                android:layout_height="50sp"
                android:text="7"
                android:textSize="15sp"
				android:background="@android:color/transparent" />

            <Button
                android:id="@+id/num8"
                android:layout_width="55sp"
                android:layout_height="50sp"
                android:text="8"
                android:textSize="15sp"
				android:background="@android:color/transparent" />

            <Button
                android:id="@+id/num9"
                android:layout_width="55sp"
                android:layout_height="50sp"
                android:text="9"
                android:textSize="15sp"
				android:background="@android:color/transparent" />

			<Button
                android:id="@+id/dived"
                android:layout_width="55sp"
                android:layout_height="50sp"
                android:text="/"
                android:textSize="15sp"
                android:background="@android:color/holo_blue_light" />

			<Button
                android:id="@+id/percent"
                android:layout_width="55sp"
                android:layout_height="50sp"
                android:text="%"
                android:textSize="15sp"
				android:background="@android:color/holo_blue_light" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/line4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/num4"
                android:layout_width="55sp"
                android:layout_height="50sp"
                android:text="4"
                android:textSize="15sp"
				android:background="@android:color/transparent" />

            <Button
                android:id="@+id/num5"
                android:layout_width="55sp"
                android:layout_height="50sp"
                android:text="5"
                android:textSize="15sp"
				android:background="@android:color/transparent" />

            <Button
                android:id="@+id/num6"
                android:layout_width="55sp"
                android:layout_height="50sp"
                android:text="6"
                android:textSize="15sp"
				android:background="@android:color/transparent" />

            <Button
                android:id="@+id/multiply"
                android:layout_width="55sp"
                android:layout_height="50sp"
                android:text="*"
                android:textSize="15sp"
				android:background="@android:color/holo_blue_light" />

            <Button
                android:id="@+id/inverse"
                android:layout_width="55sp"
                android:layout_height="50sp"
                android:text="1/x"
                android:textSize="15sp"
				android:background="@android:color/holo_blue_light" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/line5"
	            android:layout_width="wrap_content"
	            android:layout_height="100dp"
	            android:layout_gravity="center_horizontal"
	            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/line5_1"
                android:layout_width="220dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:orientation="vertical" >

		        <LinearLayout
		            android:id="@+id/line5_1_1"
		            android:layout_width="wrap_content"
		            android:layout_height="50dp"
		            android:layout_gravity="center_horizontal"
		            android:orientation="horizontal" >

		            <Button
		                android:id="@+id/num1"
		                android:layout_width="55sp"
		                android:layout_height="50sp"
		                android:text="1"
		                android:textSize="15sp"
						android:background="@android:color/transparent" />

		            <Button
		                android:id="@+id/num2"
		                android:layout_width="55sp"
		                android:layout_height="50sp"
		                android:text="2"
		                android:textSize="15sp"
						android:background="@android:color/transparent" />

		            <Button
		                android:id="@+id/num3"
		                android:layout_width="55sp"
		                android:layout_height="50sp"
		                android:text="3"
		                android:textSize="15sp"
						android:background="@android:color/transparent" />

		            <Button
		                android:id="@+id/minus"
		                android:layout_width="55sp"
		                android:layout_height="50sp"
		                android:text="-"
		                android:textSize="15sp"
						android:background="@android:color/holo_blue_light" />
		        </LinearLayout>
		        <LinearLayout
		            android:id="@+id/line5_1_2"
		            android:layout_width="wrap_content"
		            android:layout_height="50dp"
		            android:layout_gravity="center_horizontal"
		            android:orientation="horizontal" >

		            <Button
		                android:id="@+id/num0"
		                android:layout_width="55dp"
		                android:layout_height="50sp"
		                android:text="0"
		                android:textSize="15sp"
						android:background="@android:color/transparent" />

		            <Button
		                android:id="@+id/dot"
		                android:layout_width="55sp"
		                android:layout_height="50sp"
		                android:text="."
		                android:textSize="15sp"
						android:background="@android:color/transparent" />
		            <Button
		                android:id="@+id/reset"
		                android:layout_width="55sp"
		                android:layout_height="50sp"
		                android:text="C"
		                android:textSize="15sp"
						android:background="@android:color/transparent" />
		            <Button
		                android:id="@+id/add"
		                android:layout_width="55sp"
		                android:layout_height="50sp"
		                android:text="+"
		                android:textSize="15sp"
						android:background="@android:color/holo_blue_light" />

		        </LinearLayout>
			</LinearLayout>
			<LinearLayout
			    android:id="@+id/line5_2"
				android:layout_width="55dp"
				android:layout_height="match_parent"
				android:layout_gravity="center_horizontal"
				android:orientation="horizontal" >

		  		<Button
		  		    android:id="@+id/submit"
		  		    android:layout_width="55sp"
		  		    android:layout_height="match_parent"
		  		    android:text="="
		  		    android:textSize="15sp"
					android:background="@android:color/holo_blue_light" />
			</LinearLayout>
        </LinearLayout>
	</LinearLayout>
</LinearLayout>